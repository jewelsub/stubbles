<% story = task.story %>
<li id="<%= container_id_of(task) %>">
<%= form_for([story, task], :remote=>true) do |f| %>
	<div class="field task_header">
		<%= f.text_field :title, :size => '40' %>
	</div>
	<%= f.select(:assigned_to_id, story.assignable_users.collect {|u| [u.email, u.id]}, :include_blank => true) %>
	<div class="field" style="display: inline-block">
		<%= f.label :estimated %><br />
		<%= f.text_field :hours_estimated, :size => '2' %>
	</div>
	<div class="field" style="display: inline-block">
		<%= f.label :spent %><br />
		<%= f.text_field :hours_spent, :size => '2' %>
	</div>
	<div class="actions" style="display: inline-block">
		<%= f.submit(:'data-disable-with' => "Saving...") %>
		<%= ajax_cancel_link(task, :li) %>
	</div>
<% end %>
</li>